<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="General">

            <EditTextPreference
                android:title="Notebook Title"
                android:summary="This allows you to change the title of your current Notebook."
                android:key="title"
                android:defaultValue="Notebook" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Sunlight">

            <CheckBoxPreference
                android:title="Dark Background"
                android:summary="Screen too bright? We got you covered. Press this item to make the background darker."
                android:key="background_color"
                android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Color Background">

            <SwitchPreference
                android:title="Change Background Color"
                android:summary="Changes background to Black."
                android:key="diff_background_color"
                android:defaultValue="false" />
            <SwitchPreference
                android:title="Change Background Color"
                android:summary="Changes background to Blue."
                android:key="diff_background_color1"
                android:defaultValue="false" />
            <SwitchPreference
                android:title="Change Background Color"
                android:summary="Changes background to Green."
                android:key="diff_background_color2"
                android:defaultValue="false" />
    </PreferenceCategory>



</PreferenceScreen>